.content{ "id" => "mapping-#{file.id}", "class" => "#{tab_active?(file.aasm_state)}" }
  .small-6.columns
    = form_for(@mapping, url: { controller: "mappings", action: "create", originable_id: file.id}) do |f|
      = f.hidden_field :originable_id, value: file.id

      = f.label :targetable_model
      = f.select :targetable_model, @targetable_models
      = f.submit "Select Target Model", class: "button", method: :post
  .small-6.columns
    %dl 
      %dt 
        mappings: 
        = file.mappings.count
      / %dd
      /   = form_for(@mapping, url: { controller: "mappings", action: "create", originable_id: file.id}) do |f|
      /     = f.hidden_field :originable_id, value: file.id
      /     = f.select :targetable_model, @targetable_models
      /     = f.submit "create new mapping", class: "button expand", method: :post
    %dl
      %dt Actions
      %dd
        = button_to "delete", content_path(id: file.id), :method => :delete, class: "button alert" 
